<style>
  .ucm-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    color: #a1b7a6;
    /*border: 1px solid black;*/
  }
  .ucm-logo-container {
    min-width: 200px;
    max-width: 200px;
    width: 100%;
  }
  .ucm-container h1 {
    font-size: 2rem;
    text-align: center;
    text-transform: uppercase;
    font-weight: 800;
    color: #f4f6f6;
  }
  /* SMARTPHONES PORTRAIT */
  @media only screen and (min-width: 300px) {
  }

  /* SMARTPHONES LANDSCAPE */
  @media only screen and (min-width: 480px) {
    .ucm-logo-container{
        max-width: 300px;
    }
  }

  /* TABLETS PORTRAIT */
  @media only screen and (min-width: 768px) {
    .ucm-container h1{
        font-size: 3rem;
    }
  }

  /* TABLET LANDSCAPE / DESKTOP */
  @media only screen and (min-width: 1370px) {
    .ucm-logo-container{
        max-width: 400px;
    }
    .ucm-container h1{
        font-size: 4rem;
    }
  }
</style>
