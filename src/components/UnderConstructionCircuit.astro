---
import BottomCircuit from "./vectors/BottomCircuit.astro";
const { class: className, ...rest } = Astro.props;
---

<div class:list={["ucc-container", className]} {...rest}>
  <BottomCircuit />
</div>

<style>
  .ucc-container {
    display: flex;
    align-items: end;
    justify-content: center;
    padding: 0px 0px 0px 20px;
    min-width: 200px;
    max-width: 250px;
    
    max-height: 40vh;
    background: linear-gradient(
      to bottom,
      rgba(79, 166, 105, 0) 80%,
      rgba(244, 246, 246, 1) 100%
    );
    animation: working cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.3s infinite;
    transition: background 1000ms linear;
  }
  @media only screen and (min-height: 880px) {
    .ucc-container{
        max-height: 80vh;
        width: 100%;
    }
  }

  @keyframes working {
    0% {
      background: linear-gradient(
        to bottom,
        rgba(79, 166, 105, 0) 100%,
        rgba(244, 246, 246, 1) 100%
      );
    }
    20% {
      background: linear-gradient(
        to bottom,
        rgba(79, 166, 105, 0) 95%,
        rgba(244, 246, 246, 1) 100%
      );
    }
    40% {
      background: linear-gradient(
        to bottom,
        rgba(79, 166, 105, 0) 90%,
        rgba(244, 246, 246, 1) 100%
      );
    }
    60% {
      background: linear-gradient(
        to bottom,
        rgba(79, 166, 105, 0) 85%,
        rgba(244, 246, 246, 1) 100%
      );
    }
    100% {
      background: linear-gradient(
        to bottom,
        rgba(79, 166, 105, 0) 80%,
        rgba(244, 246, 246, 1) 100%
      );
    }
  }
</style>
