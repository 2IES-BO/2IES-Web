---
import UnderConstruction from "@components/UnderConstruction.astro";
import "@fontsource/staatliches";
import "@fontsource/space-mono/400-italic.css";
import "@fontsource/space-mono/700-italic.css";
import "../styles/global.css";
const underConstruction = import.meta.env.UNDER_CONSTRUCTION == "TRUE";
const { title = ""} = Astro.props
const titleCompleto = title ? `2IES - ${title}` : "2IES";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Logo2ies.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{titleCompleto}</title>
  </head>
  <body>
    {underConstruction ? <UnderConstruction /> : <slot />}
  </body>
</html>
